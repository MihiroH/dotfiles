# ssh
alias ssh="TERM=xterm-256color ssh"

gcloud() {
    if [[ "$1" == "compute" && "$2" == "ssh" ]]; then
        TERM=xterm-256color command gcloud "$@"
    else
        command gcloud "$@"
    fi
}
