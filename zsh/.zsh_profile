alias vi='nvim'
alias vim='nvim'

# エイリアスの設定
# ls（カラー表示）
alias ls='ls -G'
alias ll='ls -lG'
alias la='ls -laG'

cdls ()
{
  \cd "$@" && ls
}
alias cd="cdls"

# Git
alias g='git'
alias ga="add"
alias gac='g add . && g commit -m'
alias gb='g branch'
alias gc='g commit -am'
alias gco='g checkout'
alias gd='g diff'
alias gdc='git diff --cached'
alias gfp='fetchpull'
alias gl='g log --name-only'
alias gp='g push'
alias gpop='g stash pop'
alias gr='reset'
alias gs='status'
alias gsts='stash'

fetchpull () {
  g fetch -p && git pull
}
add () {
  g add .
}
reset () {
  g reset
}
stash() {
  g stash
}
status() {
  g status
}
rmbranch () {
  git branch | grep $1 | xargs git branch -D
}

if [ `uname` = "Darwin" ]; then
  alias ip='ipconfig getifaddr en1 | pbcopy && pbpaste'
fi

# カレントディレクトリのパスをクリップボードにコピー(cpwd, copypathなど)
alias pwdc='pwd | tr -d "\n" | pbcopy'

